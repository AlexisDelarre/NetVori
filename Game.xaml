        <Button x:Name="btnVaisseau" HorizontalAlignment="Stretch" Margin="10,10,1781,822" VerticalAlignment="Stretch" Width="129" FocusVisualPrimaryBrush="{x:Null}" FocusVisualSecondaryBrush="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="btnVaisseau_Click">
            <Image x:Name="imgVaisseau" Source="img/Vaisseau1.jpg" Margin="0,11,0,12" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Width="118" VerticalAlignment="Stretch">
