    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="980" Width="1920" >

    <Grid  Name="grigri" HorizontalAlignment="Left" Margin="-33,-46,0,-53" Width="1955">
